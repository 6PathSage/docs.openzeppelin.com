<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{#if keywords}}
      <meta name="keywords" content="{{keywords}}">
    {{/if}}
    {{#each customTags}}
      <meta name="{{@key}}" content="{{.}}">
    {{/each}}
    {{#if description}}
      <meta name="description" content="{{description}}">
    {{/if}}
    <link rel="canonical" href="{{canonicalUrl}}">
    <link rel="stylesheet" href="{{@root.uiRootPath}}/stylesheets/index.css">
    <title>{{#if page.title}}{{{page.title}}} - {{/if}}{{site.title}}</title>
    <link rel="shortcut icon" href="{{@root.uiRootPath}}/images/favicon.ico">
    <link
      href="https://fonts.googleapis.com/css?family=Roboto+Mono:400,500,700&display=swap"
      rel="stylesheet">
    {{> head }}
  </head>
  <body class="flex col {{#if attrs}}{{attrs}}{{/if}}">
    {{> main }}
  </body>
</html>
